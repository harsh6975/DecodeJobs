<%- include('partials/head.ejs') %>
<%- include('partials/header.ejs') %>

<main id="main">
    <!-- ======= Popular Courses Section ======= -->
    <section id="popular-courses" class="courses">
      <div class="container" data-aos="fade-up">
        <div class="section-title">
          <h2>Courses</h2>
          <p></p>
        </div>
        <div class="row" data-aos="zoom-in" data-aos-delay="100">
           <% topics.forEach(topic=>{ %>
              <% const topic_name = topic.topic_name %>
            
             <% const topic_uppercase_name = topic_name.toUpperCase() %>
             
              <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
            <div class="course-item">
              <img src="<%= topic.image_path%>" class="img-fluid" alt="...">
              <div class="course-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4><%= topic.topic_tag %></h4>
                  <p class="price">Free</p>
                </div>

                <h3><a href="/topics/<%= topic_name %>"><%= topic_uppercase_name %></a></h3>
                <p><%= topic.topic_description %></p>
              </div>
            </div>
          </div> <!-- End Course Item-->

            <% }) %>
            
            

          
          

        </div>

      </div>
    </section><!-- End Popular Courses Section -->

  </main><!-- End #main -->
  <%- include('partials/footer.ejs') %>